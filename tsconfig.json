{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "bin/"
    },
    "exclude" : [
        "lib/**/*",
        "bin/**/*"
    ],
    "include" : [
        "src/**/*"
    ]
}